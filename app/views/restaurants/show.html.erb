<div class="col-sm-4 offset-4">
  <h1><%= @restaurant.name %></h1>
  <h2>Address: <%= @restaurant.address %></h2>
  <h2>Category: <%= @restaurant.category %></h2>
  <h3>Phone Number: <%= @restaurant.phone_number %></h3>

  <%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
  <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-warning" %>
  <%= link_to "Delete", restaurant_path(@restaurant), method: :delete, class: "btn btn-danger" %>


  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Add a review", class: "btn btn-success" %>
  <% end %>

</div>
